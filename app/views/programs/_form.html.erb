<%= form_for(@program) do |f| %>

  <div class="field">
    <%= f.label :name, "Name of the programme:"  %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description, "Description:" %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit("Create Programme") %>
  </div>

<% end %>