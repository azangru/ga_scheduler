<h2>Who are you?</h2>

<%= form_tag sessions_path, method: :post do %>

  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= text_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag(value = "Log in") %>
  </div>
  
<% end %>
