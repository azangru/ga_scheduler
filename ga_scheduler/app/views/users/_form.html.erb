<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.label :first_name, "First name:"  %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name, "Last name:" %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :biography, "Tell us about yourself:" %><br />
    <%= f.text_area :biography %>
  </div>
  <div class="field">
    <%= f.label :file, 'Upload your photo' %>
    <%= f.file_field :file %>
  </div>
  <div class="field">
    <%= f.label :email, 'Email' %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <% if logged_in? && current_user.role == "admin" %>
    <div class="field">
      <%= f.label :role %>
      <%= select_tag(:role, options_for_select(["admin", "producer", "instructor", "student"], "student")) %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>